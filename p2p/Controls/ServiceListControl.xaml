<UserControl
    x:Class="p2p.Controls.ServiceListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:p2p.Controls"
    xmlns:vm="using:p2p.ViewModels"
    x:Name="ServiceList"
    >

    <StackPanel>
        <TextBlock Text="Servicios Descubiertos" FontSize="18" FontWeight="Bold" Margin="5"/>
        <ListView x:Name="ServicesListView" ItemsSource="{Binding DiscoveredServices}" Height="200" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontSize="16"/>
                        <TextBlock FontSize="12" Foreground="Gray">
                            <Span>
                                <Run Text="{Binding Address}"/>:<Run Text="{Binding Port}"/>
                            </Span>
                        </TextBlock>
                        <Button Content="{Binding ViewModel.ConnectionButtonText, ElementName=ServiceList}"
                                Command="{Binding ViewModel.ConnectCommand, ElementName=ServiceList}"
                                CommandParameter="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
